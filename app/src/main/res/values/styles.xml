
<resources>


    <style name="button_style" parent="Widget.MaterialComponents.Button" >
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">52dp</item>
        <item name="android:layout_marginStart">@dimen/grid_2</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:textAppearance">?attr/textAppearanceBody1</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:fontFamily">@font/rubik_bold</item>
    </style>

    <style name="expense_amount">
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">@font/eczar</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">30sp</item>
    </style>

    <style name="expense_date">
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">@font/eczar</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="amountstyle">
        <item name="android:fontFamily">@font/eczar_bold</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/expensemonitor_red_400</item>
    </style>

    <style name="expenseitemstyle">
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@android:color/black</item>
    </style>


</resources>
