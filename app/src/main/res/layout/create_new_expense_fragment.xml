<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">
    <data>
       <variable name="viewModel"
                 type="com.expensemoitor.expensemonitor.createnewexpense.CreateNewExpenseFragmentViewModel"/>
    </data>



    <androidx.core.widget.NestedScrollView
            android:id="@+id/nested_scroll_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            android:paddingHorizontal="@dimen/grid_0_5"
            android:paddingTop="@dimen/grid_0_25"
            android:clipToPadding="false"
            android:background="?android:colorBackground"
            app:paddingTopSystemWindowInsets="@{true}"
            tools:targetApi="o">

    <com.google.android.material.card.MaterialCardView
            android:id="@+id/email_card_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/grid_4">

            <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edit_text_amount"
                    android:layout_width="0dp"
                    android:layout_height="52dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="50dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginBottom="8dp"
                    android:clipToPadding="false"
                    android:ems="10"
                    android:hint="@string/amount"
                    android:importantForAutofill="no"
                    android:inputType="number"
                    style="@style/expenseItemStyle"
                    android:layout_marginHorizontal="@dimen/grid_2"
                    android:paddingVertical="@dimen/grid_1"
                    android:text="@={viewModel.amount}"
                    app:layout_constraintBottom_toTopOf="@+id/edit_test_description"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edit_test_description"
                    android:layout_width="0dp"
                    android:layout_height="52dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginBottom="8dp"
                    android:clipToPadding="false"
                    android:ems="10"
                    android:hint="@string/description"
                    android:importantForAutofill="no"
                    android:inputType="text"
                    android:maxLength="20"
                    android:layout_marginHorizontal="@dimen/grid_2"
                    android:paddingVertical="@dimen/grid_1"
                    android:requiresFadingEdge="horizontal"
                    android:scrollbars="none"
                    style="@style/expenseItemStyle"
                    android:text="@={viewModel.description}"
                    app:layout_constraintBottom_toTopOf="@+id/categories_spinner"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/edit_text_amount" />

            <com.google.android.material.button.MaterialButton
                    android:id="@+id/create_new_expense_button"
                    android:layout_width="0dp"
                    android:layout_height="52dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="24dp"
                    android:layout_marginEnd="16dp"
                    android:onClick="@{()->viewModel.createExpenseClick()}"
                    android:text="@string/create_new_expense"
                    style="@style/buttonStyle"
                    app:cornerRadius="15dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/categories_spinner"
                    app:layout_constraintVertical_bias="0.27" />

            <Spinner
                    android:id="@+id/categories_spinner"
                    android:layout_width="0dp"
                    android:layout_height="52dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginBottom="8dp"
                    android:entries="@array/categories_list"
                    app:popupElevationOverlay="@{@dimen/plane_16}"
                    android:onItemSelected="@{(parent,view,pos,id)->viewModel.onSelectExpenseFormOrCategoryItem(parent,view,pos,id)}"
                    app:layout_constraintBottom_toTopOf="@+id/new_date_button"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/edit_test_description"
                    />

            <com.google.android.material.button.MaterialButton
                    android:id="@+id/new_date_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp"
                    android:text="@string/date"
                    style="@style/buttonStyle"
                    app:cornerRadius="15dp"
                    app:elevation="5dp"
                    app:layout_constraintBottom_toTopOf="@+id/create_new_expense_button"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/categories_spinner" />

            <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edit_text_date"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:layout_marginEnd="24dp"
                    android:layout_marginBottom="16dp"
                    android:clipToPadding="false"
                    android:ems="10"
                    android:enabled="false"
                    android:importantForAutofill="no"
                    android:inputType="date"
                    android:minHeight="48dp"
                    android:requiresFadingEdge="horizontal"
                    android:scrollbars="none"
                    android:text="@={viewModel.currentDate}"
                    style="@style/expenseItemStyle"
                    app:layout_constraintBottom_toTopOf="@+id/create_new_expense_button"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/categories_spinner"
                    app:layout_constraintVertical_bias="1.0" />

            <androidx.core.widget.ContentLoadingProgressBar
                    android:id="@+id/progressBar"
                    style="?android:attr/progressBarStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginBottom="8dp"
                    android:visibility="gone"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.498"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.272"
                    app:progressStatus="@{viewModel.status}" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>

    </androidx.core.widget.NestedScrollView>

</layout>